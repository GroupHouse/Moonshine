<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="none" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tblTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredient Type"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/btnNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Ingredient" />

        </TableRow>

        <TableRow
            android:id="@+id/GrainRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#cccccc"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <Spinner
                android:id="@+id/Item"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left" />

            <EditText
                android:id="@+id/itemAmount"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:inputType="numberDecimal" />

            <!--
                  <Spinner
                android:id="@+id/itemAmount"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
            -->

            <Spinner
                android:id="@+id/spMeasure"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="2"
                android:textSize="@dimen/padding_small" />

        </TableRow>

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredient Notes"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

        <TableRow
            android:id="@+id/DescriptionRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#cccccc"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp" >

            <EditText
                android:id="@+id/theDescription"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:ems="10"
                android:inputType="textMultiLine"
                android:lines="3" />
        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <requestFocus />

        <TextView
            android:id="@+id/neworedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="124dp"
            android:layout_y="199dp"
            android:text="TextView"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnDel"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tableLayout1"
        android:layout_marginTop="86dp"
        android:text="Delete" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDel"
        android:layout_alignBottom="@+id/btnDel"
        android:layout_centerHorizontal="true"
        android:onClick="cancel"
        android:text="Cancel" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCancel"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_alignParentLeft="true"
        android:text="Save" />

    <EditText
        android:id="@+id/IngDescription"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCancel"
        android:layout_below="@+id/tableLayout1"
        android:layout_weight="9"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="1"
        android:visibility="invisible" />

</RelativeLayout>